    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Mocha Server Tests",
            "program": "${workspaceRoot}/src/server/node_modules/mocha/bin/_mocha",
            "args": [
                "-u",
                "tdd",
                "--timeout",
                "999999",
                "--colors",
                "${workspaceRoot}/src/server/test"
            ],
            "internalConsoleOptions": "openOnSessionStart"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Iniciar programa",
            "program": "${file}",
            "outFiles": []
        },
        {
            "type": "node",
            "request": "attach",
            "name": "Asociar al puerto",
            "address": "localhost",
            "port": 5858,
            "outFiles": []
        }
    ]
}